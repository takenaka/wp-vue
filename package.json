{
  "name": "wp-vue",
  "version": "1.0.0",
  "description": "Wordpress Theme on parcel bundler",
  "main": "index.js",
  "scripts": {
    "dev": "parcel watch src/app.ts --hmr-hostname localhost --no-source-maps --no-cache",
    "build": "npm run rmrf && parcel build src/app.ts --no-source-maps",
    "lint": "eslint --fix ./src/**/*.{ts,vue}",
    "rmrf": "rm -rf ./dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/wpapi": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "@vue/component-compiler-utils": "^3.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.2.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "sass": "^1.23.1",
    "typescript": "^3.6.4",
    "vue-template-compiler": "^2.6.10"
  },
  "dependencies": {
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-hot-reload-api": "^2.3.4",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.3",
    "wpapi": "^1.2.1"
  }
